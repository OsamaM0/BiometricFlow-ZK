# BiometricFlow-ZK Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
DATABASE_URL=sqlite:///biometric_flow.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Security Settings
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
LOG_ROTATION=daily
LOG_MAX_FILES=7

# ZK Device Configuration
ZK_CONNECTION_TIMEOUT=10
ZK_RETRY_ATTEMPTS=3
ZK_DEFAULT_PASSWORD=0

# Backend Service Ports (can be overridden by individual scripts)
# BACKEND_PORT=8000
# GATEWAY_PORT=9000
# FRONTEND_BACKEND_PORT=9001

# CORS Configuration
# ALLOWED_ORIGINS=http://localhost:8501,http://localhost:9001

# Streamlit Configuration
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Development/Production Mode
ENVIRONMENT=development
DEBUG=true

# External Services
NOTIFICATION_EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=backups/

# Performance Settings
WORKER_PROCESSES=4
REQUEST_TIMEOUT=60
MAX_CONNECTIONS=1000
