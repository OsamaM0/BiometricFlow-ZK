	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-set current date variables if not already set",
					"if (!pm.environment.get('start_date')) {",
					"    const today = new Date();",
					"    const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);",
					"    pm.environment.set('start_date', firstDay.toISOString().split('T')[0]);",
					"}",
					"",
					"if (!pm.environment.get('end_date')) {",
					"    const today = new Date();",
					"    pm.environment.set('end_date', today.toISOString().split('T')[0]);",
					"}",
					"",
					"// Set default place and device names if not set",
					"if (!pm.environment.get('place_name')) {",
					"    pm.environment.set('place_name', 'Place_1_BackOffice');",
					"}",
					"",
					"if (!pm.environment.get('device_name')) {",
					"    pm.environment.set('device_name', 'Main Office');",
					"}",
					"",
					"if (!pm.environment.get('year')) {",
					"    pm.environment.set('year', new Date().getFullYear().toString());",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global test script for all requests",
					"pm.test('Response time is less than 45 seconds', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(45000);",
					"});",
					"",
					"pm.test('Response has security headers', function () {",
					"    pm.expect(pm.response.headers.get('X-Content-Type-Options')).to.exist;",
					"    pm.expect(pm.response.headers.get('X-Powered-By')).to.include('BiometricFlow');",
					"});",
					"",
					"if (pm.response.code === 200) {",
					"    pm.test('Response is valid JSON', function () {",
					"        pm.response.to.be.json;",
					"    });",
					"    ",
					"    pm.test('Response has success field', function () {",
					"        const jsonData = pm.response.json();",
					"        pm.expect(jsonData).to.have.property('success');",
					"    });",
					"}",
					"",
					"// Log response for debugging",
					"if (pm.response.code !== 200) {",
					"    console.log('Response Status:', pm.response.code);",
					"    console.log('Response Body:', pm.response.text());",
					"}"
				]
			}
		}
